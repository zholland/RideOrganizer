<% if @error_msg == nil %>
var travellers = <%= @trip.travellers.to_json %>;
var travellerIds = updateTravellers(travellers);
initEditable(travellerIds);
<% else %>
$('#error-box').remove();
$('#main-content').prepend('<div id="error-box" class="alert alert-danger" role="alert"><%= escape_javascript(@error_msg.to_s)%></div>');
$("html, body").animate({scrollTop: 0}, 'fast');
<% end %>